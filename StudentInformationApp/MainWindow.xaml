<Window x:Class="StudentInfoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Information" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <Label Content="Full Name"/>
            <TextBox Text="{Binding Student.FullName, Mode=TwoWay}"/>
            <!-- Додайте інші елементи для введення інших даних студента -->
        </StackPanel>

        <TextBlock Grid.Row="1" Margin="10">
            <Run Text="Full Name: "/>
            <Run Text="{Binding Student.FullName}"/>
           
        </TextBlock>
    </Grid>
</Window>

