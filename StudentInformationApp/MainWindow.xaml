<Window x:Class="ProcessListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Process List App" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введіть інтервал оновлення (у секундах):" FontWeight="Bold"/>
            <TextBox x:Name="IntervalTextBox" Width="50" Margin="0,5,0,10"/>
            <Button Content="Почати оновлення" Click="StartUpdateButton_Click"/>
        </StackPanel>
        <DataGrid x:Name="ProcessDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
