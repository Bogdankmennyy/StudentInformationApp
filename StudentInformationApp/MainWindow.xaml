<Window x:Class="ProcessLauncherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Process Launcher" Height="300" Width="400">
    <Grid>
        <Button Content="Запустити дочірній процес" Click="LaunchProcessButton_Click" VerticalAlignment="Top" Margin="10"/>
        <RadioButton x:Name="WaitForCompletionRadioButton" Content="Чекати на завершення" VerticalAlignment="Top" Margin="10,40,0,0" IsChecked="True"/>
        <RadioButton x:Name="ForceExitRadioButton" Content="Примусово завершити" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBlock x:Name="ResultTextBlock" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0"/>
    </Grid>
</Window>
