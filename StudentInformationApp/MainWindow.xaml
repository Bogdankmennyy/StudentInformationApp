<Window x:Class="FractionCalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fraction Calculator" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введіть чисельник та знаменник:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtNumerator" Width="100" VerticalAlignment="Center" />
                <TextBlock Text="/" VerticalAlignment="Center" Margin="5,0,5,0"/>
                <TextBox x:Name="txtDenominator" Width="100" VerticalAlignment="Center" />
            </StackPanel>

            <Button Content="Додавання" Click="Add_Click" Margin="0,10,0,0"/>
            <Button Content="Віднімання" Click="Subtract_Click"/>
            <Button Content="Множення" Click="Multiply_Click" Margin="0,5,0,0"/>
            <Button Content="Ділення" Click="Divide_Click"/>

            <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtResult" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>

